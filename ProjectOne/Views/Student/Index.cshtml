@model IEnumerable<ProjectOne.Models.Student>
@{
    int IdNo = 1;

}
<a class="btn btn-primary btn-sm" href="@Url.Action("CreateorEdit","Student")">Add Student</a>

<table class="table table-bordered table-responsive container mt-4" ">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
            <tr>
                <td>@IdNo</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td><a class="btn btn-success btn-sm" href="Student/createoredit/@item.Id">Edit</a></td>
                <td><a class="btn btn-danger btn-sm" onclick="return confirm('are you sure delete');" href="Student/delete/@item.Id">delete</a></td>

            </tr>
            IdNo++;
}
    </tbody>
</table>
