@model ProjectOne.Models.Teacher
@{

}
<div class="row">
    <form asp-action="CreateorEdit" method="post">
        <div class="col-md-6">
            <level class="form-label">Name<span class="text-danger">*</span></level>
            <input class="form-control" required asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="col-md-6">
            <level class="form-label">Email</level>
            <input class="form-control" type="email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="col-md-6">
            <level class="form-label">Phone</level>
            <input class="form-control" asp-for="Phone" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="col-md-6">
            <level class="form-label">Address</level>
            <input class="form-control" asp-for="Address" />
            <span asp-validation-for="Address"></span>
        </div>
        <div class="col-md-3">
            <input type="submit" value="Submit" class="btn btn-success" />
        </div>
    </form>
</div>

