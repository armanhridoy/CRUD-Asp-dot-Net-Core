@model IEnumerable<ProjectOne.Models.Teacher>
@{
    int IdNo = 1;

}
<a class="btn btn-primary btn-sm" href="Teacher/CreateOrEdit">Add Teacher</a>
<a class="btn btn-primary btn-sm" href="Student/CreateOrEdit">Add Student</a>

<table class="table table-bordered table-responsive container mt-4">
    <thead>
        <tr>
            <th> Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@IdNo</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>

                <td><a class="btn btn-success btn-sm" href="Teacher/CreateOrEdit/@item.Id">Edit</a></td>
                <td><a class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');" href="@Url.Action("Delete","Teacher", new{id=item.Id})">Delete</a></td>
            </tr>
            IdNo++;
        }
    </tbody>
</table>

        